{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["@fish-budget/supabase#dev"]
    },
    "db:start": {
      "cache": false,
      "persistent": true,
      "with": ["@fish-budget/supabase#dev"]
    },
    "db:reset": {
      "cache": false,
      "persistent": false,
      "with": ["@fish-budget/supabase#reset"]
    },
    "db:stop": {
      "cache": false,
      "persistent": false,
      "with": ["@fish-budget/supabase#stop"]
    }
  }
}
